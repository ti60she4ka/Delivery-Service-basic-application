<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet author="Pavel Avtaev" id="04-08-2021-18-16">
    <createTable tableName="category">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="category_pkey"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="parent_id" type="BIGINT"/>
    </createTable>

    <addUniqueConstraint
      columnNames="name"
      constraintName="category_name_ukey"
      tableName="category"/>
  </changeSet>

  <changeSet author="Pavel Avtaev" id="06-08-2021-21-38" dbms="postgresql">
    <addForeignKeyConstraint
      baseColumnNames="parent_id"
      baseTableName="category"
      constraintName="category_parent_id_fkey"
      referencedColumnNames="id"
      referencedTableName="category"
      onDelete="SET NULL"/>
  </changeSet>

  <changeSet author="Pavel Avtaev" id="06-08-2021-21-39" dbms="mssql">
    <addForeignKeyConstraint
      baseColumnNames="parent_id"
      baseTableName="category"
      constraintName="category_parent_id_fkey"
      referencedColumnNames="id"
      referencedTableName="category"/>

    <sql>
      CREATE OR ALTER TRIGGER TRG_SET_NULL_PARENT_ID
      ON CATEGORY INSTEAD OF DELETE
      AS BEGIN

      UPDATE CATEGORY SET PARENT_ID=NULL WHERE PARENT_ID IN (SELECT ID FROM DELETED)
      DELETE FROM CATEGORY WHERE ID IN (SELECT ID FROM DELETED)

      END
    </sql>
  </changeSet>

</databaseChangeLog>